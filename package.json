{
  "name": "rebaslight",
  "version": "3.6.0",
  "private": true,
  "description": "Rebaslight - an easy to use special effects editor",
  "repository": "git@github.com:rebaslight/rebaslight.git",
  "author": "Very Small Helm LLC <dev@smallhelm.com>",
  "license": "AGPL-3.0+",
  "productName": "Rebaslight",
  "homepage": "http://www.rebaslight.com/",
  "main": "app/index.js",
  "build": {
    "appId": "com.rebaslight",
    "files": [
      "app",
      "node_modules"
    ],
    "extraResources": [
      {
        "from": "ffmpeg-bins/${os}/${arch}",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.bz2"
      ]
    },
    "nsis": {}
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "scriptsp --raw run watch",
    "run": "NODE_ENV=development electron ./app",
    "watch": "NODE_ENV=development webpack --watch",
    "test": "standardx && node src/tests.js",
    "pack": "electron-builder --dir",
    "webpack": "webpack",
    "dist": "electron-builder --x64 --ia32",
    "release": "webpack && electron-builder --x64 --ia32"
  },
  "devDependencies": {
    "contra": "^1.9.1",
    "css-loader": "^4.2.1",
    "cuid": "^2.1.4",
    "dom-delegator": "^13.1.0",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "font-awesome": "^4.7.0",
    "hex-rgb": "^1.0.0",
    "js-managed-css": "^1.4.0",
    "level-js": "^5.0.2",
    "levelup": "^4.4.0",
    "lodash": "^4.17.11",
    "main-loop": "^3.2.0",
    "normalize.css": "^5.0.0",
    "rgb-hex": "^1.0.0",
    "scriptsp": "^1.1.1",
    "seed-random": "^2.2.0",
    "standardx": "^2.0.0",
    "semver": "^7.3.2",
    "style-loader": "^1.2.1",
    "tape": "^5.0.1",
    "url-loader": "^4.1.0",
    "virtual-dom": "^2.1.1",
    "virtual-dom-absolute-layout": "^1.0.0",
    "virtual-dom-closure-widget": "^1.0.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "wrap-prevent-default": "^1.0.0",
    "xhr": "^2.2.0",
    "xtend": "^4.0.1"
  },
  "eslintConfig": {
    "rules": {
      "camelcase": 0
    }
  },
  "dependencies": {
    "split2": "^3.1.1"
  }
}
