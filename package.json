{
  "name": "rebaslight",
  "version": "3.6.2",
  "private": true,
  "description": "Rebaslight - an easy to use special effects editor",
  "repository": "git@github.com:rebaslight/rebaslight.git",
  "author": "Very Small Helm LLC <dev@smallhelm.com>",
  "license": "AGPL-3.0+",
  "productName": "Rebaslight",
  "homepage": "http://www.rebaslight.com/",
  "main": "app/index.js",
  "build": {
    "appId": "com.rebaslight",
    "files": [
      "app",
      "node_modules"
    ],
    "extraResources": [
      {
        "from": "ffmpeg-bins/${os}/${arch}",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "tar.bz2"
      ]
    },
    "nsis": {}
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "scriptsp --raw run bundle-d",
    "run": "NODE_ENV=development electron ./app",
    "test": "standardx && node src/tests.js",
    "pack": "electron-builder --dir",
    "bundle-p": "esbuild --bundle --loader:.png=dataurl --define:global=window --define:process.env.NODE_DEBUG=undefined src/index.js --outfile=app/bundle.js --define:process.env.NODE_ENV=\\\"production\\\" --minify",
    "bundle-d": "esbuild --bundle --loader:.png=dataurl --define:global=window --define:process.env.NODE_DEBUG=undefined src/index.js --outfile=app/bundle.js --define:process.env.NODE_ENV=\\\"development\\\" --watch",
    "dist": "electron-builder --x64 --ia32",
    "release": "npm run bundle-p && electron-builder --x64 --ia32"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "cuid": "^2.1.4",
    "dom-delegator": "^13.1.0",
    "electron": "^16.0.2",
    "electron-builder": "^22.8.0",
    "esbuild": "^0.14.0",
    "events": "^3.3.0",
    "hex-rgb": "^1.0.0",
    "js-managed-css": "^1.4.0",
    "lodash": "^4.17.11",
    "main-loop": "^3.2.0",
    "normalize.css": "^5.0.0",
    "path-browserify": "^1.0.1",
    "rgb-hex": "^1.0.0",
    "scriptsp": "^1.1.1",
    "seed-random": "^2.2.0",
    "semver": "^7.3.2",
    "standardx": "^7.0.0",
    "tape": "^5.0.1",
    "virtual-dom": "^2.1.1",
    "virtual-dom-absolute-layout": "^1.0.0",
    "virtual-dom-closure-widget": "^1.0.0",
    "wrap-prevent-default": "^1.0.0",
    "xtend": "^4.0.1"
  },
  "browser": {
    "path": "path-browserify"
  },
  "eslintConfig": {
    "rules": {
      "camelcase": 0,
      "no-var": 0,
      "quote-props": 0,
      "dot-notation": 0,
      "indent": 0,
      "object-curly-spacing": 0,
      "object-curly-newline": 0,
      "multiline-ternary": 0
    }
  },
  "dependencies": {
    "split2": "^4.1.0"
  }
}
